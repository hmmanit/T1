<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.homanad.android.t1.ui.feature.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_createOrEditTaskFragment"
            app:destination="@id/createOrEditTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.homanad.android.t1.ui.feature.calendar.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.homanad.android.t1.ui.feature.statistic.StatisticFragment"
        android:label="fragment_statistic"
        tools:layout="@layout/fragment_statistic" />

    <fragment
        android:id="@+id/settingFragment"
        android:name="com.homanad.android.t1.ui.feature.setting.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />

    <fragment
        android:id="@+id/createOrEditTaskFragment"
        android:name="com.homanad.android.t1.ui.feature.home.task.CreateOrEditTaskFragment"
        android:label="CreateOrEditTaskFragment"
        tools:layout="@layout/fragment_create_or_edit_task" />
</navigation>